/* @group Timeline Histograms */

h2.publication_history {
	font-size: 1.8em;
	padding-top: 1em;
}

.timeline {
	height: 18em;
	margin: 15px 0;
	list-style-type: none;
	/* IE6 and IE7 have a minor liquid resizing issue here.
	   See ie6 and ie7 css files for a simple fix */
}

.timeline li {
	height: 100%;
	float: left;
	max-width: 3em;
	text-align: center;
}

.timeline li a {
	display: block;
	position: relative;
	height: 100%;
	border-bottom: 1px solid #eee;
	font: 9px/9px Verdana, "Lucida Grande", Lucida, sans-serif;
	text-align: center;
}

.timeline li .bar {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 0;
	min-height: 1px;
	background: #ccc url(<%= image_path 'one_white_pixel.gif' %>) repeat-y right;
}

.timeline li.z .bar {
	min-height: 0;
}

.timeline li .year {
	display: block;
	position: absolute;
	left: 0;
	bottom: -15px;
	line-height: 14px; /* this keeps the hover states from freaking out */	
	width: 100%;
	text-indent: -9999px;
}

.timeline.huge li.n20 .year {
	text-indent: 0;
}

.timeline.large li.n10 .year {
	text-indent: 0;
}

.timeline.medium li.n5 .year {
	text-indent: 0;
}

.timeline.small li.n2 .year {
	text-indent: 0;
}

.timeline li .count {
	display: block;
	position: relative;
	z-index: 100;
	top: -11px;
	text-indent: -9999px;
}

/* Hover states */ 

.timeline li a:hover {
	background-color: #f2f7f9;
}

.timeline.small:hover  li .year,
.timeline.medium:hover li .year,
.timeline.large:hover  li .year,
.timeline.huge:hover   li .year {
	text-indent: -9999px;
}

/* This function won't work in IE6. The html>body bit keeps these rules.
   from being executed. This is not in ie6.css because doing so would require
   a much, much more complicated approach than this minor hack. */
html > body .timeline.small  li a:hover .year,
html > body .timeline.medium li a:hover .year,
html > body .timeline.large  li a:hover .year,
html > body .timeline.huge   li a:hover .year {
	text-indent: 0; 
}

.timeline li a:hover .bar {
	background-color: #1592ce;
}

.timeline li a:hover .count {
	text-indent: 0;
}



/* The histograms are not clickable on the
   blast_queries#show page, so we give them a different
   look and feel */
   
#blast_queries_show .timeline li a:hover,
#blast_queries_index  .timeline li a:hover {
	color: #494949;
	cursor: default;
}

#blast_queries_show .timeline li a:hover .bar,
#blast_queries_index  .timeline li a:hover .bar {
